@model Eventera.Models.AstronomicalEvent

@{
    ViewData["Title"] = "Details";
}

<h1>Event Details</h1>

<div>
    <img src="@Model.Filename" alt="@Model.Title" class="w-50" />
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.StartDateTime.ToString("MMMM dd, yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Model.Category?.Title
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDateTime.ToString("MMMM dd, yyyy h:mm tt")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AstronomicalEventId">Edit</a> |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

<h2>Tickets Purchased</h2>
@if (Model.Tickets != null && Model.Tickets.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tickets.First().PurchaseDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tickets.First().PurchaserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tickets.First().AstronomicalEvent)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Tickets)
        {
            <tr>
                <td>
                    @item.PurchaseDateTime.ToString("MMMM dd, yyyy h:mm tt")
                </td>
                <td>
                    @item.PurchaserName
                </td>
                <td>
                    @item.AstronomicalEvent?.Title
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No tickets have been purchased for this event.</p>
}
