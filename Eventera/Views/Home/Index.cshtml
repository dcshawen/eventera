@model IEnumerable<Eventera.Models.AstronomicalEvent>

@{
    ViewData["Title"] = "Home";
}

<h1 class="display-4 text-center">Eventera</h1>
<h2 class="display-6 text-center">Upcoming Astronomical Events</h2>

@if (Model != null && Model.Any())
{
    <div id="astronomicalEventsCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @{
                var first = true;
                foreach (var item in Model)
                {
                    <div class="carousel-item @(first ? "active" : "")">
                        <div class="card mx-auto" style="max-width: 600px;">
                            @if (item.ImageUrl != null)
                            {
                                <img src="@item.ImageUrl
                                " class="card-img-top" alt="@item.Title
                                " style="height: 300px; object-fit: cover;" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <h6 class="card-subtitle mb-4 text-muted">@item.StartDateTime.ToString("MMMM dd, yyyy")</h6>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </div>
                    first = false;
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#astronomicalEventsCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#astronomicalEventsCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}
else
{
    <p>No upcoming astronomical events found.</p>
}