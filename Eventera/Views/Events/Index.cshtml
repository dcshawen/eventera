@model List<Eventera.Models.Event>
@{
    ViewData["Title"] = "Events";
}
<h1 class="text-center mb-4">Upcoming Events</h1>
<div class="row">
    @*Loop through model to display every Event passed into this view it a bootstrap card*@
    @foreach (var eventItem in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                <h5 class=" card-title
    ">
                        @eventItem.Title
                    </h5>
                    <p class="card-text">
                        <strong>Date:</strong> @eventItem.EventDate.ToString("MMMM dd, yyyy")<br />
                        <strong>Location:</strong> @eventItem.Location<br />
                        <strong>Description:</strong> @eventItem.Description
                    </p>
                </div>
            </div>
        </div>
    }
</div>